#!/usr/bin/env node

var argv = require( 'optimist' )
	.usage( 'Usage: $0 ComponentName' )
	.demand( [ '_' ] )
	.alias( 'f', 'force' )
	.argv

require( '../../output/tools.js' )

var componentName = argv._
var force         = argv.force

load( "Create" ).renderComponentTemplate( componentName, force )
